<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".organizer.OrganizerViewEventRegistrationsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="List Of Attendees"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/organizer_view_event_registrations_pager"
        android:layout_width="match_parent"
        android:layout_height="591dp">

    </androidx.viewpager2.widget.ViewPager2>

    <Button
        android:id="@+id/btn_organizer_view_event_registrations_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:text="@string/back" />

</LinearLayout>